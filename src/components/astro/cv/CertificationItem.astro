---
interface Props {
    name: string;
    issuer: string;
    link?: string;
    date: string;
    credentialId?: string;
}

const {name, issuer, link, date, credentialId} = Astro.props;
---
<article role="article" class="card bg-base-100 shadow-sm mb-2 print:mb-1">
    <div class="card-body p-4 print:p-2">
        <div class="flex flex-col space-y-1.5">
            <div class="flex items-center justify-between gap-x-2 text-base">
                <h3 class="font-semibold leading-none">
                    {link ? (
                        <a href={link} target="_blank" rel="noopener noreferrer" class="hover:underline link link-primary">
                            {name}
                        </a>
                    ) : (
                        name
                    )}
                </h3>
                <div class="text-sm tabular-nums opacity-60" aria-label={`Issued: ${date}`}>
                    {date}
                </div>
            </div>
        </div>
        <div class="text-pretty text-sm mt-2 opacity-80 print:text-[12px]">
            {issuer}
            {credentialId && (
                <span class="ml-2 text-xs opacity-60">â€¢ ID: {credentialId}</span>
            )}
        </div>
    </div>
</article>
