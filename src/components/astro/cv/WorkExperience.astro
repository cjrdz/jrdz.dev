---
import { getCVData } from '../../../data/cv';
import WorkItem from "./WorkItem.astro";

const currentLocale = Astro.currentLocale || "en";
const CV_DATA = getCVData(currentLocale);
const {work} = CV_DATA;
---
<section class="flex min-h-0 flex-col gap-y-3 print:gap-y-1 mb-8 print:mb-4">
    <h2 class="text-xl font-bold text-primary" id="work-experience">Work Experience</h2>
    <div class="space-y-4 print:space-y-2">
        {work.map((item) => (
            <WorkItem {...item}/>
        ))}
    </div>
</section>
